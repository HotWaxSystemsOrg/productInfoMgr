<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        require-authentication="anonymous-all">

    <!--    ==================================================================     -->

    <transition name="findProductForm">
        <service-call name="find#product.Product"/>
        <default-response url="." />
    </transition>
    <!--    ==================================================================    -->

    <transition name="findProductContentForm">
        <service-call name="find#product.ProductContent"/>
        <default-response url="." />
    </transition>

    <!--    ==================================================================    -->

    <transition name="findProductPriceForm">
        <service-call name="find#product.ProductPrice"/>
        <default-response url="." />
    </transition>

    <!--    ==================================================================    -->

    <transition name="findProductDimensionForm">
        <service-call name="find#product.ProductDimension"/>
        <default-response url="." />
    </transition>

    <!--    ==================================================================    -->

    <transition name="findProductAssocForm">
        <service-call name="find#product.ProductAssoc"/>
        <default-response url="."/>
    </transition>

    <!--    ==================================================================    -->

    <transition name="findProductFeatureForm">
        <service-call name="find#product.ProductFeature"/>
        <default-response url="."/>
    </transition>

    <!--    ==================================================================    -->

    <transition name="findProductFeatureApplForm">
        <service-call name="find#product.ProductFeatureAppl"/>
        <default-response url="."/>
    </transition>

    <!--    ==================================================================    -->

    <transition name="findProductCategoryMemberForm">
        <service-call name="find#product.ProductCategoryMember"/>
        <default-response url="."/>
    </transition>

    <!--    ==================================================================    -->

    <transition name="findProductCategoryForm">
        <service-call name="find#product.ProductCategory"/>
        <default-response url="."/>
    </transition>


    <!--    =================================================================================     -->


    <widgets>
        <container-box>
            <box-header>
                <label type="h1" text="Find Product Entities Here!"/>
            </box-header>
        </container-box>

        <!--    Product    -->
        <container-box>
            <box-header>
                <label type="h3" text="Product and Product Content"/>
            </box-header>
            <box-body>
                <container-dialog id="PRD" button-text="Product">
                    <form-single name="ProductForm" transition="findProductForm" >
                        <auto-fields-entity entity-name="Product"  field-type="find-display" include="nonpk" />
                        <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
                    </form-single>
                </container-dialog>

                <!--    ==================================================================    -->

                <!--    Product Content    -->
                <container-dialog id="PRDC" button-text="Product Content">
                    <form-single name="ProductContentForm" transition="findProductContentForm" >
                        <auto-fields-entity entity-name="ProductContent"  field-type="find-display"  />
                        <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
                    </form-single>
                </container-dialog>
            </box-body>
        </container-box>

        <!--    ==================================================================    -->

        <!--    Product Dimension    -->
        <container-box>
            <box-header>
                <label type="h3" text="Product Dimension and Price"/>
            </box-header>
            <box-body>
                <container-dialog id="PRDD" button-text="Product Dimension">
                    <form-single name="ProductDimensionForm" transition="findProductDimensionForm" >
                        <auto-fields-entity entity-name="ProductDimension"  field-type="find-display" />
                        <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
                    </form-single>
                </container-dialog>

                <!--    ==================================================================    -->

                <!--    Product Price    -->
                <container-dialog id="PRDP" button-text="Product Price">
                    <form-single name="ProductPriceForm" transition="findProductPriceForm" >
                        <auto-fields-entity entity-name="ProductPrice"  field-type="find-display" />
                        <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
                    </form-single>
                </container-dialog>
            </box-body>
        </container-box>


        <!--    ==================================================================    -->

        <!--    Product Category    -->
        <container-box>
            <box-header>
                <label type="h3" text="Product Category and Category Member"/>
            </box-header>
            <box-body>
                <container-dialog id="PRDCA" button-text="Product Category">
                    <form-single name="ProductCategoryForm" transition="findProductCategoryForm">
                        <auto-fields-entity entity-name="ProductCategory" field-type="find-display"/>
                        <field name="submitButton">
                            <default-field title="Create">
                                <submit/>
                            </default-field>
                        </field>
                    </form-single>
                </container-dialog>

                <!--    ==================================================================    -->

                <!--    Product Category Member    -->
                <container-dialog id="PRDCM" button-text="Product Category Member">
                    <form-single name="ProductCategoryMemberForm" transition="findProductCategoryMemberForm">
                        <auto-fields-entity entity-name="ProductCategoryMember" field-type="find-display"/>
                        <field name="submitButton">
                            <default-field title="Create">
                                <submit/>
                            </default-field>
                        </field>
                    </form-single>
                </container-dialog>
            </box-body>
        </container-box>

        <!--    ==================================================================    -->

        <!--    Product Association    -->
        <container-box>
            <box-header>
                <label type="h3" text="Product Association, Feature and Feature Application"/>
            </box-header>
            <box-body>
                <container-dialog id="PRDA" button-text="product Association">
                    <form-single name="ProductAssocForm" transition="findProductAssocForm">
                        <auto-fields-entity entity-name="ProductAssoc" include="nonpk" field-type="find-display"/>
                        <field name="submitButton">
                            <default-field title="Create">
                                <submit/>
                            </default-field>
                        </field>
                    </form-single>
                </container-dialog>

                <!--    ==================================================================    -->

                <!--    Product Feature    -->
                <container-dialog id="PRDF" button-text="Product Feature">
                    <form-single name="ProductFeatureForm" transition="findProductFeatureInfo">
                        <auto-fields-entity entity-name="ProductFeature" field-type="find-display"/>
                        <field name="submitButton">
                            <default-field title="Create"><submit/></default-field>
                        </field>
                    </form-single>
                </container-dialog>

                <!--    ==================================================================    -->

                <!--    Product Feature Application    -->
                <container-dialog id="PRDFA" button-text="Product Feature Application">
                    <form-single name="ProductFeatureApplForm" transition="findProductFeatureApplForm">
                        <auto-fields-entity entity-name="ProductFeatureAppl" field-type="find-display" />
                        <field name="submitButton">
                            <default-field title="Create">
                                <submit/>
                            </default-field>
                        </field>
                    </form-single>
                </container-dialog>
            </box-body>
        </container-box>

        <!--    ==================================================================    -->
    </widgets>
</screen>